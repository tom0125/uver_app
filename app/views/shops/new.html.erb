
<h1>shopの新規登録</h1>
<div class="row">
<div class="border">
<%=form_with model: @shop,local: true do |f|%>
<%= render 'shared/form_erros.messages' %>

<div class="form-group">
  <label class="col-md-12 control-label">
    
    <span class="badge badge-danger">必須</span>
    <%=f.label :name%><br>
  </label>
  <div class="col-md-12">
    <%=f.text_field :name,class: "form-control",id: "shop_name" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-12 control-label">
    <span class="badge badge-danger">必須</span>
    <%=f.label :address%>
  </label>
  <div class="col-md-12">
    <%=f.text_field :address,class: "form-control",id: "shop_address"%>
  </div>
</div>

 <%= f.fields_for :shop_areas, @shop.shop_areas.build do |form| %>
  <div class="form-group">
  <label class="col-md-12 control-label">
    <span class="badge badge-danger">必須</span>
    <%=form.label :area_id%>
  </label>
  <div class="col-md-8">
    <%= form.select :area_id,
                                {"選択してください":"", "中央区": 1,"東区": 2,
                                "西区": 3 ,"南区": 4, "博多区": 5}, 
                                {}, { class: "form-control"} %>
  </div>
  </div>
    
<%end%>



<%end%>  
</div>
</div>
</div>