<%= f.fields_for :reviews, @shop.reviews.build do |form| %>
  <div class="form-group">
    <%=form.label :frequency%>
    <%= form.select :frequency,
                                {"選択してください": nil, "低い(1)": 1,"やや低い(2)": 2,
                                "普通(3)": 3 ,"やや高い(4)": 4, "高い(5)": 5}, 
                                {}, { class: "form-control",style:"width:80%"} %>
  </div>                                
  <div class="form-group">
    <%=form.label :attitude%>
    <%= form.select :attitude,
                              {"選択してください": nil,"待ち時間なし": 5,"短い（1-5分）": 4,
                              "普通（5-10分）": 3,"長い(10-15分)": 2, "それ以上": 1}, 
                              {},{ class: "form-control",style:"width:80%"} %>
  </div>
  <div class="form-group">
    <%=form.label :waiting_time%>
    <%= form.select :waiting_time,
                                {"選択してください": nil,"待ち時間なし": 5,"短い（1-5分）": 4,
                                "普通（5-10分）": 3,"長い(10-15分)": 2,"それ以上": 1}, 
                                {},{ class: "form-control",style:"width:80%"} %>
  </div>
  <div class="form-group">
    <%=form.label :comment%>
    <%= form.text_area :comment, class: 'form-control',style:"width:60%;" %>
  </div>
    
<% end %>